<Window x:Class="_16._12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16._12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Width="200" Height="200"/>
        <Button Content="Добавить элемент" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="215,160,0,0" Width="150" Height="30" Click="AddElementButton_Click"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="100"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10,0,0" Width="100"/>
        <Button Content="Сложить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="230,10,0,0" Width="60" Height="30" Click="AddButton_Click"/>
        <TextBlock x:Name="resultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,45,0,0" Width="280"/>
    </Grid>
</Window>
